<%= render "categories/header" %>
<div class="d-flex flex-column justify-content-center align-items-center m-3 pt-3">
  <div class="card text-center w-75 payments list-group">
    <div class="transaction list-group-item">
     <p>Total Transactions</p>
     <p>$<%= @category.payments.sum(:amount) %></p>
    </div>
  </div>

  <% @payments.each do |payment| %>
    <div class="card text-center w-75">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <div class="card-title badge text-bg-primary p-2 px-4">
          <%= @category.name %>
        </div>
        <div>
          <p class="card-text"><%= payment.name %></p>
          <p class="card-text opacity-50"><%= time_ago_in_words(@category[:created_at]) %></p>
        </div>
        <div>
          <p class="card-text">$<%= payment.amount %></p>
        </div>
      </div>
    </div> 
  <% end %>


  <div class="card-footer text-muted">
    <%= link_to "Add New Transaction", new_payment_path(category_id: @category.id), class: "btn btn-success w-100" %>
  </div> 

</div>
