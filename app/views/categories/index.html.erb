<% if current_user %>
<div class="w-100 p-0">
  <header class="w-100 p-0 shadow mb-3 bg-body rounded">
    <div class="row text-bg-primary p-3">
      <div class="col m-1">
        <a href="/">
          <span class="material-symbols-outlined mt-2 badge text-bg-primary">
            arrow_back
            </span>
        </a>
      </div>
      <div class=" col m-1 d-flex flex-column align-items-center">
        <h3 class="mb-2 mt-2">CATEGORIES</h3>
      </div>
      <div class="col">
      </div>
    </div>
  </header>

  <div class="">
    <div class="">
      <% @categories.each do |category| %>
        <%= link_to category_path(category) do %>
          <div class="d-flex justify-content-between p-0 mb-2 shadow p-3 mb-3 bg-body rounded">
            <div class="">
              <img class="img-fluid rounded-start image" alt="category-logo" src=<%= category.icon %>>
            </div>
            <div class="d-flex aling-self-center mt-4 ">
              <h5 class=""><%= category.name %></h5>
            </div>  
            <div class="mt-4">
              <p class="sum">Total: $<%= category.payments.sum(:amount)%></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
</div>
<div class="fixed-bottom p-5">
  <%= link_to "Add New Category", new_category_path, class: "btn btn-success w-100" %>
</div>